<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:fontFamily="@font/sourcesans3_bold"
        android:text="Contribution ID: "/>

    <TextView
        android:id="@+id/tvContributions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sourcesans3_bold"
        android:text="Contributions: "/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:fontFamily="@font/sourcesans3_semibold"
        android:text="Fullname: Jason Llanes"/>
    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:fontFamily="@font/sourcesans3_semibold"
        android:text="Mobile No.: 09123456789"/>
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:fontFamily="@font/sourcesans3_semibold"
        android:text="Date &amp; Time: "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:fontFamily="@font/sourcesans3_bold"
        android:text="Note: This item is still being confirmed."/>


</LinearLayout>